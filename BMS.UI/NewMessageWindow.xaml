<Window x:Class="BMS.UI.NewMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BMS.UI"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="NewMessageWindow" Height="450" Width="453.636">
    <Grid>
        <ListBox x:Name="UsersListBox" HorizontalAlignment="Left" Height="192" Margin="29,103,0,0" VerticalAlignment="Top" Width="128"/>
        <TextBox x:Name="MessageTextBox" HorizontalAlignment="Left" Height="192" Margin="182,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="224"/>
        <Button x:Name="SendButton" Content="Send" HorizontalAlignment="Left" Margin="278,355,0,0" VerticalAlignment="Top" Width="129" Click="SendButton_Click" Height="42"/>
        <Label x:Name="label" Content="Logged in as: " HorizontalAlignment="Left" Margin="29,38,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BlockButton" Content="Block user" HorizontalAlignment="Left" Margin="29,355,0,0" VerticalAlignment="Top" Width="128" Height="42" Click="BlockButton_Click"/>
    </Grid>
</Window>
